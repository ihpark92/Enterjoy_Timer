{
  "manifest_version": 3,
  "name": "EnterJoy Comment Timer",
  "version": "1.0.0",
  "description": "enterjoy.day 댓글 작성 쿨다운 타이머",
  "author": "EnterJoy",
  "browser_specific_settings": {
    "gecko": {
      "id": "enterjoy-timer@enterjoy.day",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "EnterJoy Comment Timer"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://enterjoy.day/*"],
      "js": ["browser-polyfill.js", "content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
